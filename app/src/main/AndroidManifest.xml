<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.drzaius.wemooutletledcontrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".template_activity" />
        <activity
            android:name=".WeMoControl"
            android:label="@string/title_activity_wemo_control" />
        <activity
            android:name=".OutletControl"
            android:label="@string/title_activity_outlet_control" />
        <activity
            android:name=".LEDControl"
            android:label="@string/title_activity_led_control" />
        <activity android:name=".RemoteSwitchBrickletControl"
            android:label="@string/title_activity_remote_switch_bricklet"/>
    </application>

</manifest>